<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".selectsongs"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/excercise1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exercise no 1" />


                   <ListView
                       android:id="@+id/select_song_listview1"
                       android:layout_width="match_parent"
                       android:layout_height="550dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/excercise2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exercise no 2" />

                <ListView
                    android:id="@+id/select_song_listview2"
                    android:layout_width="wrap_content"
                    android:layout_height="550dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/excercise3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exercise no 3" />

                <ListView
                    android:id="@+id/select_song_listview3"
                    android:layout_width="wrap_content"
                    android:layout_height="550dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/excercise4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exercise no 4" />

                <ListView
                    android:id="@+id/select_song_listview4"
                    android:layout_width="wrap_content"
                    android:layout_height="550dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/excercise5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exercise no 5" />

                <ListView
                    android:id="@+id/select_song_listview5"
                    android:layout_width="wrap_content"
                    android:layout_height="550dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/savemusic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:backgroundTint="#FF5500"
      android:src="@drawable/ic_save_black_24dp"
      android:layout_margin="30dp"
      android:layout_gravity="bottom|right">

  </com.google.android.material.floatingactionbutton.FloatingActionButton>





</androidx.coordinatorlayout.widget.CoordinatorLayout>